{
    "compilerOptions": {
        "target": "es2020",
        "module": "commonjs",
        "outDir": "./lib",
        "sourceMap": true,
        "incremental": true,
        "strict": true,
        "esModuleInterop": true,
        "strictNullChecks": true,
        "noUnusedLocals": true,
        "removeComments": false,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "declaration": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true
    }
}
